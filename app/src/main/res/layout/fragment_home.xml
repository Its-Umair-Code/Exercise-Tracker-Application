<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0b1e43"
    android:orientation="vertical"
    tools:context=".HomeFragment">

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="match_parent"
        android:layout_height="350dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/daily_tracker" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/start_exercise"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:layout_above="@+id/show_exercises"
            android:layout_centerInParent="true"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_design"
            android:text="Start Exercise"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/show_exercises"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:layout_centerInParent="true"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_design"
            android:text="Show All Exercises"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/show_record"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:layout_below="@+id/show_exercises"
            android:layout_centerInParent="true"
            android:background="@drawable/button_design"
            android:text="Show My Record"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="20dp" />

    </RelativeLayout>

</LinearLayout>